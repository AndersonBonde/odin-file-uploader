generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstname String
  lastname  String
  password  String
  folders   Folder[]
  files     File[]
}

model Folder {
  id           Int      @id @default(autoincrement())
  name         String
  files        File[]
  parentId     Int?
  parentFolder Folder?  @relation("children", fields: [parentId], references: [id])
  folders      Folder[] @relation("children")
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
}

model File {
  id       Int      @id @default(autoincrement())
  name     String
  size     Int
  uploadAt DateTime @default(now())
  folder   Folder   @relation(fields: [folderId], references: [id])
  folderId Int
  url      String   @default("/")
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
}
